<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet id="1" author="">
        <createTable tableName="ezscheduled_script">
            <column autoIncrement="true" name="id" type="java.sql.Types.INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="process_id" type="java.sql.Types.INT" defaultValue="0">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR( 50 )"  defaultValue="">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="command" type="VARCHAR( 255 )">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="last_report_timestamp" type="java.sql.Types.INT" defaultValue="0">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="progress" type="java.sql.Types.TINYINT" defaultValue="0">
                <constraints unique="false" nullable="false"/>
            </column>
            <column name="user_id" type="java.sql.Types.INT" defaultValue="0">
                <constraints unique="false" nullable="false"/>
            </column>
        </createTable>

        <modifySql dbms="mysql">
            <append value=" ENGINE=InnoDB DEFAULT CHARSET=utf8"/>
            <replace replace="VARCHAR( 255 )" with="TEXT"/>
        </modifySql>

        <modifySql dbms="postgresql">
            <replace replace="TINYINT" with="SMALLINT"/>
        </modifySql>
    </changeSet>

    <changeSet id="2" author="">
        <createIndex tableName="ezscheduled_script" indexName="ezscheduled_script_timestamp">
            <column name="last_report_timestamp"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>